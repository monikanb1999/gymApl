<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".ui.plans.TroubleZoneFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How active are you???"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/active"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/active"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:id="@+id/noactivitycardview"
            app:cardBackgroundColor="#D9FBFF"
            app:cardMaxElevation="15dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noactivity"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Little or No Active"
            android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noactivitycontent"
                android:layout_margin="20dp"
                android:text="Mostly sitting through day(eg:desk Job,bank,Teller)"
                app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/noactivitycardview"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:id="@+id/lightactivitycardview"
            app:cardBackgroundColor="#D9FBFF"
            app:cardMaxElevation="15dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lightactivity"
                android:layout_margin="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Lightly Active"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/liteactivitycontent"
                android:layout_margin="20dp"
                android:text="Mostly standing through day(eg:SalesAssociate,Teacher)"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lightactivitycardview"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:id="@+id/Moderatelyactivecardview"
            app:cardBackgroundColor="#D9FBFF"
            app:cardMaxElevation="15dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moderateactivity"
                android:layout_margin="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Moderatively Active"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moderateactivitycontent"
                android:layout_margin="20dp"
                android:text="Mostly walking or doing physical conditions through day(eg:true guide,waiter)"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Moderatelyactivecardview"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:id="@+id/veryactivecardview"
            app:cardBackgroundColor="#D9FBFF"
            app:cardMaxElevation="15dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/veryactivity"
                android:layout_margin="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Very Active"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/veryactivitycontent"
                android:layout_margin="20dp"
                android:text="Mostly doing heavy physical activities through the day(eg:gym instructor,Construction Worker)"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </layout>